{
	"compilerOptions": {
		"moduleResolution": "node",
		"types": [
            "element-plus/global",
            "vite/client", 
            "unplugin-vue-define-options/macros-global"
        ],
        "lib": ["ESNext", "DOM","DOM.Iterable"],
        "skipLibCheck": true,
        "noEmit": true,
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"baseUrl": "./",
		"paths": {
			//路径映射，相对于baseUrl
			"@/*": ["src/*"]
		},
        "outDir": "./dist"
	},
	"include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "shims-vue.d.ts",
        "auto-imports.d.ts"
    
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
